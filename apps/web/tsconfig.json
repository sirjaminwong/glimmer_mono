{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@server/*": ["../../apps/server/src/*"],
      "@web/*": ["../../apps/web/src/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"],
}
